<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Random Fun!</title>
</head>
<body>
  <h1>Welcome to the Fun Zone!</h1>
  <p>Click the button to see a random message:</p>
  <button onclick="changeMessage()">Click Me!</button>
  <p id="message">You haven't clicked me yet!</p>
  <script>
    function changeMessage() {
      var messages = ["Hello!", "Surprise!", "Let's have fun!", "Keep clicking!"];
      var randomIndex = Math.floor(Math.random() * messages.length);
      var newMessage = messages[randomIndex];
      document.getElementById("message").innerHTML = newMessage;
    }
  </script>
</body>
</html>
